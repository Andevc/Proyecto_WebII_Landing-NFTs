---
import { ViewTransitions, slide} from 'astro:transitions'; 
import NavBar from '../components/NavMain.astro';
import Footer from '../components/Footer.astro';
import AkiraFont from '@assets/fonts/AkiraExpandedDemo.woff2';
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate={slide({ duration: "1s" })}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body>
		<NavBar/>
		<main>
			<slot/>
		</main>
		<Footer/>
	</body>
</html>
<style is:global >
	@font-face{
		font-family: 'Akira' ;
		src: url('/fonts/AkiraExpandedDemo.woff2') format('woff2');
		font-style: normal;
	}
	@font-face{
		font-family: 'OliviarSansLg' ;
		src: url('/fonts/OliviarSans-Light.woff2') format('woff2');
		font-style: normal;
	}
	@font-face{
		font-family: 'OliviarSansRg' ;
		src: url('/fonts/OliviarSans-Regular.woff2') format('woff2');
		font-style: normal;
	}
	:root {
		--bg-gradient: linear-gradient(45deg, #ff004c 0%, #21D4FD 100%);
		--color-primary:#ff004c ;
		--color-secondary:#21D4FD;
		
	}
	html {
		background: #020202;
	}
	body{
		background:linear-gradient(#00000099, #00000077), url('../assets/images/Background/bg.webp');
		background-repeat: repeat;
		min-width: 1080px;
	}

	.main-slot{
		padding-top: 100px;
		margin: 0 auto;
		width: 85%;
	}
	.txt-tittle{
		font-family: 'Akira', sans-serif;
		font-size: 3.2rem;
		font-weight: 700;
		text-align: left;
		letter-spacing: 3px;
		filter: drop-shadow(0 0 10px black);
		color: white;
		text-wrap: balance;
		
	}
	.text-gradient{
		background: linear-gradient(120deg, var(--color-primary) , var(--color-secondary) );
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: cover;
		background-position: center;	
	}
	
	.txt-paragraph {
		color: white;
		font-size: 1.5em;
		font-family: 'OliviarSansLg', sans-serif;
		text-wrap: balance;
	}	
</style>
